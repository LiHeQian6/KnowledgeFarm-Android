<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pk.PkActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/show_battle_title">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/dog"
                android:scaleX="-1"
                android:id="@+id/my_dog_small_image"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/my_dog_re"
                android:layout_toRightOf="@+id/my_dog_small_image">
                <ProgressBar
                    android:layout_width="200dp"
                    android:max="100"
                    android:progress="50"
                    android:id="@+id/my_pet_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/progressbar_bg"
                    android:layout_height="25dp"/>
                <TextView
                    android:text="50/100"
                    android:layout_centerInParent="true"
                    android:id="@+id/my_pet_value"
                    android:textColor="@color/blackTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="智力值:100"
                android:layout_marginTop="8dp"
                android:id="@+id/my_pet_intelligence_value"
                android:textColor="@color/ShopTextColor"
                android:layout_below="@+id/my_dog_re"
                android:layout_toRightOf="@+id/my_dog_small_image"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第1回合"
            android:layout_centerInParent="true"
            android:textSize="30dp"
            android:id="@+id/time_limit"
            android:textColor="@color/ShopTextColor"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/other_pet_re">
                <ProgressBar
                    android:layout_width="200dp"
                    android:max="100"
                    android:progress="50"
                    android:scaleX="-1"
                    android:id="@+id/other_pet_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/progressbar_bg"
                    android:layout_height="25dp"/>
                <TextView
                    android:text="50/100"
                    android:layout_centerInParent="true"
                    android:id="@+id/other_pet_value"
                    android:textColor="@color/blackTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/other_pet_re"
                android:text="100:智力值"
                android:id="@+id/other_pet_intelligence_value"
                android:textColor="@color/ShopTextColor"
                android:layout_marginTop="8dp"
                android:layout_toLeftOf="@+id/other_pet_small_image"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/dog"
                android:id="@+id/other_pet_small_image"
                android:layout_toRightOf="@+id/other_pet_re"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/show_battle_title">
        <TextView
            android:text="平局啦！"
            android:layout_centerInParent="true"
            android:textSize="36sp"
            android:id="@+id/center_text"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始"
            android:background="@drawable/buy"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:textSize="20dp"
            android:id="@+id/start_battle_btn"
            android:textColor="@color/ShopTextColor"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/my_pet"
            android:layout_marginRight="50dp"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="血量-10"
                android:id="@+id/less_my_pet"
                android:layout_above="@+id/my_pet_image"
                android:layout_centerHorizontal="true"
                android:textColor="@color/AnswerFalse"
                android:textSize="30dp"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/dog"
                android:id="@+id/my_pet_image"
                android:scaleX="-1"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:padding="10dp"
            android:layout_toRightOf="@+id/my_pet"
            android:id="@+id/other_pet">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="血量-10"
                android:id="@+id/less_other_pet"
                android:layout_above="@+id/other_pet_image"
                android:layout_centerHorizontal="true"
                android:textColor="@color/AnswerFalse"
                android:textSize="30dp"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/dog"
                android:id="@+id/other_pet_image"
                android:layout_centerInParent="true"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/button"
                android:text="离开"
                android:id="@+id/run_away"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/attack"
            android:layout_centerInParent="true"
            android:layout_width="400dp"
            android:rotation="-10"
            android:translationY="-50dp"
            android:layout_height="300dp"/>
    </RelativeLayout>
</RelativeLayout>