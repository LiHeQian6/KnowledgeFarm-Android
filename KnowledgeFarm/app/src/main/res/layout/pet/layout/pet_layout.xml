<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="60dp"
    android:background="@drawable/notice"
    android:theme="@style/customApp"
    android:layout_height="match_parent">
    <ListView
        android:id="@+id/pet_list"
        android:scrollbars="none"
        android:divider="@null"
        android:layout_width="50dp"
        android:layout_height="match_parent"/>
<!--    <com.li.knowledgefarm.view.HorizontalListView-->
<!--        android:layout_weight="1"-->
<!--        android:layout_width="match_parent"-->
<!--        android:orientation="horizontal"-->
<!--        android:id="@+id/pet"-->
<!--        android:layout_height="match_parent"/>-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/pet_detail"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:text="宠物"
                android:gravity="center"
                android:textSize="25dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/permitColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:padding="20dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/dog"
                        android:id="@+id/pet_img"
                        android:layout_width="100dp"
                        android:layout_height="120dp"/>
                    <TextView
                        android:text="正在使用"
                        android:textSize="16sp"
                        android:rotation="45"
                        android:id="@+id/is_use"
                        android:textColor="@color/ShopTextColor"
                        android:layout_marginTop="25dp"
                        android:background="@color/colorAccent"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>
                <ScrollView
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="名称："
                                android:textSize="20sp"
                                android:textColor="@color/permitColor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="小哈"
                                android:id="@+id/name"
                                android:textSize="20sp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/permitColor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="阶段："
                                android:textSize="20sp"
                                android:textColor="@color/permitColor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="幼年期"
                                android:textSize="20sp"
                                android:id="@+id/growth"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/permitColor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="智力值："
                                android:textSize="20sp"
                                android:textColor="@color/permitColor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <RelativeLayout
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="50"
                                    android:textSize="20sp"
                                    android:id="@+id/intelligence_value"
                                    android:gravity="center"
                                    android:textColor="@color/permitColor"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"/>
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="生命值："
                                android:textSize="20sp"
                                android:textColor="@color/permitColor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <RelativeLayout
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="100"
                                    android:textSize="20sp"
                                    android:gravity="center"
                                    android:id="@+id/life_value"
                                    android:textColor="@color/permitColor"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"/>
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="体力值："
                                android:textSize="20sp"
                                android:textColor="@color/permitColor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <RelativeLayout
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">
                                <ProgressBar
                                    android:layout_width="100dp"
                                    android:max="100"
                                    android:progress="50"
                                    android:id="@+id/physical_bar"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:progressDrawable="@drawable/progressbar_bg"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:text="50/100"
                                    android:gravity="center"
                                    android:id="@+id/physical_value"
                                    android:textColor="@color/permitColor"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"/>
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="描述："
                                android:textSize="20sp"
                                android:textColor="@color/permitColor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="这是一段非常宇宙无敌吊炸天的高端描述"
                                android:textSize="20sp"
                                android:id="@+id/description"
                                android:textColor="@color/permitColor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="4"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.li.knowledgefarm.view.HorizontalListView
                android:id="@+id/pet_utils"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:text="更换"
                    android:id="@+id/use"
                    android:background="@drawable/button"
                    android:layout_gravity="center"
                    android:textColor="@color/buttonColor"
                    android:layout_width="110dp"
                    android:layout_height="45dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>