<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/friendbackground"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/layout_search"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:layout_height="wrap_content">
        <EditText
            android:inputType="number"
            android:textSize="12dp"
            android:id="@+id/search_account"
            android:imeOptions="flagNoExtractUi"
            android:theme="@style/MyEditText"
            android:textCursorDrawable="@color/ShopTextColor"
            android:layout_width="wrap_content"
            android:hint="搜索"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="40dp"
            android:text="搜"
            android:id="@+id/search"
            android:textAlignment="center"
            android:background="@drawable/button"
            android:layout_height="40dp"
            android:textColor="@color/buttonColor"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
    <RadioGroup
        android:layout_width="wrap_content"
        android:id="@+id/searchSelected"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <RadioButton
            android:layout_width="match_parent"
            android:text="我的好友"
            android:checked="true"
            android:id="@+id/my"
            android:textSize="10dp"
            android:layout_weight="1"
            android:button="@drawable/radio_btn_style"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:layout_width="match_parent"
            android:text="推荐好友"
            android:id="@+id/all"
            android:textSize="10dp"
            android:layout_weight="1"
            android:button="@drawable/radio_btn_style"
            android:layout_height="wrap_content"/>
    </RadioGroup>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:layout_width="match_parent"
            android:id="@+id/friends_lv"
            android:divider="#00000000"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/pre"
                android:id="@+id/pre"
                android:layout_height="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:text="1/16"
                android:id="@+id/now"
                android:gravity="center"
                android:autoSizeMaxTextSize="25dp"
                android:maxLines="1"
                android:autoSizeTextType="uniform"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_width="30dp"
                android:id="@+id/next"
                android:src="@drawable/next"
                android:layout_height="50dp"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>