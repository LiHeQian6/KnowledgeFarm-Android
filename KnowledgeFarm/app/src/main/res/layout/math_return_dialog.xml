<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#619358">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"></TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="你还没有答完题哦，现在退出无法获得全部奖励哦"
                android:textColor="@color/ShopTextColor"
                android:textSize="20sp"></TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <Button
                android:id="@+id/cancel_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/ShopTextColor"
                android:text="取消"
                android:textColor="@color/blackTextColor"
                android:textSize="25sp">

            </Button>

            <Button
                android:id="@+id/sure_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@color/ShopTextColor"
                android:text="退出"
                android:textColor="@color/blackTextColor"
                android:textSize="25sp"></Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>