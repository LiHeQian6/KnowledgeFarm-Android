<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/touch"
    android:background="@drawable/main_background"
    android:clipChildren="false"
    tools:context=".Main.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/land_background"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:background="@drawable/land_background"
            android:scaleY="0.8"
            android:scaleX="0.8"
            android:visibility="gone"
            android:clipChildren="false">
        </FrameLayout>
        <FrameLayout
            android:id="@+id/lands"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleY="0.8"
            android:scaleX="0.8"
            android:rotationX="10"
            android:rotation="-10"
            android:clipChildren="false">
        </FrameLayout>
    </FrameLayout>
    <ImageView android:layout_width="50dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/dog"
        android:id="@+id/dog"
        android:layout_marginTop="100dp"
        android:layout_marginRight="100dp"
        android:layout_alignParentTop="true"
        android:layout_height="160dp"/>
    <RelativeLayout android:layout_width="match_parent"
                  android:gravity="center_vertical"
                  android:layout_height="wrap_content">
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_alignParentLeft="true"
                      android:id="@+id/userInfo"
                      android:paddingLeft="10dp"
                      android:gravity="center_vertical"
                      android:layout_height="80dp">
            <ImageView android:layout_width="50dp"
                       android:id="@+id/photo"
                       android:src="@drawable/photo"
                       android:layout_height="50dp"/>
            <LinearLayout android:layout_width="wrap_content"
                          android:orientation="vertical"
                          android:padding="5dp"
                          android:layout_height="wrap_content">
                <HorizontalScrollView
                    android:layout_width="100dp"
                    android:scrollbars="none"
                    android:layout_height="wrap_content">
                    <TextView android:layout_width="wrap_content"
                        android:text="昵称:景宝宝"
                        android:id="@+id/nickName"
                        android:textSize="20sp"
                        android:textColor="@color/ShopTextColor"
                        android:layout_height="wrap_content"/>
                </HorizontalScrollView>
                <TextView android:layout_width="wrap_content"
                          android:text="lv:16"
                          android:id="@+id/level"
                          android:textColor="@color/ShopTextColor"
                          android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ProgressBar
                        android:layout_width="100dp"
                        android:progress="50"
                        android:id="@+id/experience"
                        android:layout_centerInParent="true"
                        android:progressDrawable="@drawable/progressbar_bg"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_height="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="20/500"
                        android:textSize="10sp"
                        android:id="@+id/experienceValue"
                        android:textColor="@android:color/black"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <TextView android:layout_width="wrap_content"
                          android:text="账号：26415161"
                          android:textSize="12sp"
                          android:id="@+id/account"
                    android:textColor="@color/ShopTextColor"
                          android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
        <TextView android:layout_width="wrap_content"
                  android:text="金币：6666"
                  android:layout_margin="5dp"
            android:textColor="@color/ShopTextColor"
                  android:layout_toRightOf="@+id/userInfo"
                  android:id="@+id/money"
            android:textSize="20sp"
                  android:layout_height="wrap_content"/>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_alignParentRight="true"
                      android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:id="@+id/notify">
                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/notify"
                        android:id="@+id/notify_img"/>
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:src="@drawable/red"
                        android:visibility="gone"
                        android:id="@+id/notify_red"
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通知"/>
            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:orientation="vertical"
                          android:gravity="center"
                          android:id="@+id/shopbox"
                          android:layout_marginRight="20dp"
                          android:layout_height="wrap_content">
                <ImageView android:layout_width="50dp"
                           android:src="@drawable/shop1"
                           android:id="@+id/shop"
                           android:layout_height="50dp"/>
                <TextView android:layout_width="wrap_content"
                          android:text="商店"
                          android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                         android:orientation="vertical"
                         android:gravity="center"
                         android:layout_marginRight="20dp"
                         android:layout_height="wrap_content">
                <ImageView android:layout_width="50dp"
                           android:src="@drawable/pet"
                           android:id="@+id/pet"
                           android:layout_height="50dp"/>
                <TextView android:layout_width="wrap_content"
                          android:text="宠物"
                          android:id="@+id/pett"
                          android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                         android:orientation="vertical"
                         android:gravity="center"
                         android:id="@+id/settingbox"
                         android:layout_marginRight="20dp"
                         android:layout_height="wrap_content">
                <ImageView android:layout_width="50dp"
                           android:src="@drawable/setting1"
                           android:id="@+id/setting"
                           android:layout_height="50dp"/>
                <TextView android:layout_width="wrap_content"
                          android:text="设置"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>



    <LinearLayout android:layout_width="match_parent"
                  android:gravity="bottom"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content">
        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:layout_marginRight="10dp"
                      android:layout_height="wrap_content">
            <ImageView android:layout_width="80dp"
                       android:src="@drawable/xuexizhongxin"
                       android:id="@+id/learn"
                       android:layout_height="70dp"/>
            <TextView android:layout_width="wrap_content"
                      android:text="学习中心"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:layout_marginRight="10dp"
                      android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp">
                <ImageView android:layout_width="60dp"
                    android:src="@drawable/shuihu"
                    android:id="@+id/water"
                    android:layout_centerInParent="true"
                    android:layout_height="60dp"/>
                <ImageView
                    android:layout_width="60dp"
                    android:src="@drawable/xuanzhong"
                    android:visibility="gone"
                    android:id="@+id/xzw"
                    android:layout_height="60dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="16"
                    android:textColor="#000"
                    android:id="@+id/waterCount"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <TextView android:layout_width="wrap_content"
                      android:text="水"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:layout_marginRight="10dp"
                      android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp">
                <ImageView android:layout_width="45dp"
                    android:src="@drawable/huafei1"
                    android:id="@+id/fertilizer"
                    android:layout_centerInParent="true"
                    android:layout_height="45dp"/>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/xuanzhong"
                    android:visibility="gone"
                    android:id="@+id/xzf"
                    android:layout_height="60dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="16"
                    android:textColor="#000"
                    android:id="@+id/fertilizerCount"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <TextView android:layout_width="wrap_content"
                      android:text="肥料"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:id="@+id/harvestbox"
                      android:layout_marginRight="10dp"
                      android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp">
                <ImageView android:layout_width="45dp"
                    android:src="@drawable/shouhuo"
                    android:id="@+id/harvest"
                    android:layout_centerInParent="true"
                    android:layout_height="45dp"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/xzs"
                    android:src="@drawable/xuanzhong"
                    android:layout_height="40dp"/>
            </RelativeLayout>
            <TextView android:layout_width="wrap_content"
                      android:text="收获"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:id="@+id/bagbox"
                      android:layout_marginRight="10dp"
                      android:layout_height="wrap_content">
            <ImageView android:layout_width="55dp"
                       android:src="@drawable/beibao1"
                       android:id="@+id/bag"
                       android:padding="5dp"
                       android:layout_height="55dp"/>
            <TextView android:layout_width="wrap_content"
                      android:text="背包"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:id="@+id/taskbox"
                      android:layout_marginRight="20dp"
                      android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="65dp"
                android:layout_height="wrap_content">
                <ImageView android:layout_width="60dp"
                    android:src="@drawable/daytask"
                    android:id="@+id/task"
                    android:padding="5dp"
                    android:layout_height="60dp"/>
                <ImageView
                    android:layout_alignParentRight="true"
                    android:src="@drawable/red"
                    android:id="@+id/daytask_red"
                    android:visibility="gone"
                    android:layout_width="10dp"
                    android:layout_height="10dp"/>
            </RelativeLayout>
            <TextView android:layout_width="wrap_content"
                      android:text="每日任务"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView android:layout_width="40dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/myfriends"
        android:id="@+id/friends"
        android:layout_marginRight="-30dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="-10dp" />
</RelativeLayout>