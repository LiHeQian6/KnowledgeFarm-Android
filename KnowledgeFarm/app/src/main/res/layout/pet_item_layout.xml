<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="wrap_content"
    android:padding="20dp"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerInParent="true"
            android:src="@drawable/dog"
            android:id="@+id/pet_img"
            android:layout_width="200dp"
            android:layout_height="200dp"/>
        <TextView
            android:text="正在使用"
            android:textSize="26sp"
            android:rotation="45"
            android:id="@+id/is_use"
            android:textColor="@color/ShopTextColor"
            android:layout_marginTop="35dp"
            android:background="@color/colorAccent"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="名称："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="小哈"
            android:id="@+id/name"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="阶段："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="幼年期"
            android:id="@+id/growth"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="描述："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="这是一段非常宇宙无敌吊炸天的高端描述"
            android:id="@+id/description"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="智力值："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ProgressBar
                android:layout_width="100dp"
                android:max="100"
                android:progress="50"
                android:id="@+id/intelligence_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/progressbar_bg"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="50/100"
                android:id="@+id/intelligence_value"
                android:gravity="center"
                android:textColor="@color/blackTextColor"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="体力值："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ProgressBar
                android:layout_width="100dp"
                android:max="100"
                android:progress="50"
                android:id="@+id/physical_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/progressbar_bg"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="50/100"
                android:gravity="center"
                android:id="@+id/physical_value"
                android:textColor="@color/blackTextColor"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="生命值："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ProgressBar
                android:layout_width="100dp"
                android:max="100"
                android:progress="50"
                android:id="@+id/life_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/progressbar_bg"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="50/100"
                android:gravity="center"
                android:id="@+id/life_value"
                android:textColor="@color/blackTextColor"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:text="使用"
        android:id="@+id/use"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>