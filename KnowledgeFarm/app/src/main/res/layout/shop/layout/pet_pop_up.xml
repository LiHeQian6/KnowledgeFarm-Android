<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/diaback"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="7">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="25dp"
                android:textColor="@color/ShopTextColor" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="40dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/this_pet_image"
                    android:layout_weight="1"
                    android:src="@drawable/dog"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="宠物名称"
                    android:textSize="22dp"
                    android:textColor="@color/ShopTextColor"
                    android:id="@+id/pet_name"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="40dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="价格"
                        android:textSize="17dp"
                        android:id="@+id/this_pet_price"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/ShopTextColor"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="描述:"
                        android:textSize="17dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/ShopTextColor"/>
                    <ScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="描述"
                            android:textSize="17dp"
                            android:id="@+id/this_pet_description"
                            android:textColor="@color/ShopTextColor"/>
                    </ScrollView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:text="智力值："
                            android:textColor="@color/ShopTextColor"
                            android:textSize="17dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RelativeLayout
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="50"
                                android:id="@+id/pet_intelligence_value"
                                android:gravity="center"
                                android:textSize="17dp"
                                android:textColor="@color/blackTextColor"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:text="生命值："
                            android:textSize="17dp"
                            android:textColor="@color/ShopTextColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RelativeLayout
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="100"
                                android:gravity="center"
                                android:textSize="17dp"
                                android:id="@+id/pet_life_value"
                                android:textColor="@color/blackTextColor"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:text="体力值："
                            android:textSize="17dp"
                            android:textColor="@color/ShopTextColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RelativeLayout
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="50/100"
                                android:gravity="center"
                                android:textSize="17dp"
                                android:id="@+id/pet_physical_value"
                                android:textColor="@color/blackTextColor"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center">

            <Button
                android:id="@+id/pet_btnCancel"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="-10dp"
                android:background="@drawable/diacancel"/>

            <Button
                android:id="@+id/buy_pet"
                android:layout_width="60dp"
                android:layout_marginLeft="30dp"
                android:layout_height="60dp"
                android:layout_marginTop="-10dp"
                android:background="@drawable/diatuichu"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>