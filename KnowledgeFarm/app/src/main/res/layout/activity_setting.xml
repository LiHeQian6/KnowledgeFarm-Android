<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings.SettingActivity"
    android:background="@drawable/background">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <ImageView
            android:id="@+id/iv_return"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/jiantou"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_return"
            android:layout_marginTop="5dp"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="设置"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <Button
            android:id="@+id/btnUpdateNickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改昵称"/>
        <Button
            android:id="@+id/btnUpdateGrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改年级"/>
        <Button
            android:id="@+id/btnUpdatePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"/>
        <Button
            android:id="@+id/btnBindingQQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定QQ"/>
        <Button
            android:id="@+id/btnUnBindingQQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="解绑QQ"
            android:visibility="gone"/>
        <Button
            android:id="@+id/btnRegout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="切换账号"/>
    </LinearLayout>
</RelativeLayout>