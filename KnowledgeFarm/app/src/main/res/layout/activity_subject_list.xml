<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Study.SubjectListActivity"
    android:background="@drawable/learnback">
    <Button
        android:id="@+id/btnReturn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/jiantou"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="50dp">
        <Button
            android:id="@+id/btnMath"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/math"/>
        <Button
            android:id="@+id/btnEnglish"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/english"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"/>
        <Button
            android:id="@+id/btnChinese"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/chinese"/>
    </LinearLayout>
</RelativeLayout>