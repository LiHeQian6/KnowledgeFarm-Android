<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="20dp"
    android:background="@drawable/logindialogbac">

    <LinearLayout
        android:id="@+id/linearCode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/layout_account"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/editstyle"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <EditText
                android:id="@+id/findPwdAccount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:cursorVisible="true"
                android:hint="请输入账号"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textEmailAddress"
                android:textAlignment="center"
                android:textColor="@color/blackTextColor"
                android:textColorHint="@color/editTextCorlor"
                android:textCursorDrawable="@color/cursorCorlor"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_email"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/editstyle"
            android:focusable="true"
            android:focusableInTouchMode="true">


            <EditText
                android:id="@+id/findPwdEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:cursorVisible="true"
                android:hint="请输入邮箱"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textEmailAddress"
                android:textAlignment="center"
                android:textColor="@color/blackTextColor"
                android:textColorHint="@color/editTextCorlor"
                android:textCursorDrawable="@color/cursorCorlor"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_code"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/editstyle"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <EditText
                    android:id="@+id/identifyCode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:hint="请输入验证码"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="number"
                    android:paddingLeft="20dp"
                    android:textAlignment="center"
                    android:textColor="@color/blackTextColor"
                    android:textColorHint="@color/editTextCorlor"
                    android:textCursorDrawable="@color/cursorCorlor"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4">

                <TextView
                    android:id="@+id/getCode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="获取验证码"
                    android:textAlignment="center"
                    android:textColor="#1E90FF"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/buy"
                android:text="确定"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="25dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linearFindPwd"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="20dp"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/newPwd"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/eradius"
            android:gravity="center"
            android:hint="新密码"
            android:inputType="textPassword"
            android:imeOptions="flagNoExtractUi"
            android:maxLength="16"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/configNewPwd"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxLength="16"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/eradius"
            android:gravity="center"
            android:hint="确认密码"
            android:inputType="textPassword"
            android:imeOptions="flagNoExtractUi"
            android:textSize="20sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="0dp"/>
        <Button
            android:id="@+id/btnFindPwd"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="修改密码"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="25sp"
            android:background="@drawable/radius" />
    </LinearLayout>

</LinearLayout>