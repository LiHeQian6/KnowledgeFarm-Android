<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bag_gezi"
        android:orientation="vertical"
        android:id="@+id/show_flower_li"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/bag_flower_img"
            android:layout_marginTop="-2dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/meigui"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/bag_flower_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="玫瑰花"
            android:textSize="12dp"
            android:textColor="@color/ShopTextColor">
        </TextView>

        <TextView
            android:id="@+id/bag_flower_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量"
            android:textSize="12dp"
            android:textColor="@color/ShopTextColor"/>
    </LinearLayout>
</LinearLayout>