<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/main_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/returns_message"
            android:src="@drawable/returns"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:background="@drawable/userinfo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textSize="30sp"
                    android:id="@+id/message_title"
                    android:textColor="@color/ShopTextColor"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="35dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <Button
                    android:id="@+id/my_message_btn"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="个人信息"
                    android:textColor="@color/buttonColor"
                    android:background="@drawable/button"/>

                <Button
                    android:id="@+id/system_setting"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="系统设置"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/buttonColor"
                    android:background="@drawable/button"/>
                <Button
                    android:id="@+id/about"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:text="关于"
                    android:textColor="@color/buttonColor"
                    android:background="@drawable/button"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    android:id="@+id/user_mess_li">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingLeft="6dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="50dp"
                                    android:id="@+id/btnUpdatePhoto"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/photo"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginLeft="15dp"
                                    android:layout_gravity="center_vertical">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/ShopTextColor"
                                            android:visibility="visible"
                                            android:id="@+id/user_nickname"
                                            android:text="昵称:小完能"
                                            android:textSize="18dp"/>
                                        <EditText
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/ShopTextColor"
                                            android:visibility="gone"
                                            android:hint="小完能"
                                            android:textSize="18dp"/>
                                        <ImageView
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_gravity="center"
                                            android:id="@+id/change_nickname"
                                            android:layout_marginLeft="6dp"
                                            android:src="@drawable/modify"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Id:123456"
                                            android:textSize="18dp"
                                            android:id="@+id/user_account"
                                            android:textColor="@color/ShopTextColor"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:id="@+id/change_grade_li">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/ShopTextColor"
                                            android:text="年级："
                                            android:textSize="22dp"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:text="一年级"
                                            android:id="@+id/show_grade"
                                            android:textColor="@color/ShopTextColor"
                                            android:textSize="20dp"/>
                                        <Spinner
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_toRightOf="@+id/grade"
                                            android:visibility="gone"
                                            android:id="@+id/grade_spinner"
                                            android:entries="@array/sarry"
                                            android:layout_centerVertical="true"/>
                                    </LinearLayout>
                                    <Button
                                        android:layout_width="60dp"
                                        android:layout_height="30dp"
                                        android:background="@drawable/button"
                                        android:text="修改"
                                        android:textColor="@color/buttonColor"
                                        android:layout_marginLeft="10dp"
                                        android:id="@+id/btnUpdateGrade"
                                        android:gravity="center"
                                        android:textSize="16dp"
                                        android:layout_toRightOf="@+id/change_grade_li"/>
                                </RelativeLayout>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_marginTop="10dp"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:id="@+id/bangding_qq_li">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="QQ："
                                            android:textSize="22dp"
                                            android:textColor="@color/ShopTextColor"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="12345678"
                                            android:id="@+id/showQQ"
                                            android:textColor="@color/ShopTextColor"
                                            android:layout_centerVertical="true"
                                            android:textSize="20dp" />
                                    </LinearLayout>
                                    <Button
                                        android:layout_width="60dp"
                                        android:layout_height="30dp"
                                        android:layout_marginLeft="10dp"
                                        android:text="绑定"
                                        android:textSize="16dp"
                                        android:id="@+id/btnUpdateQQ"
                                        android:textColor="@color/buttonColor"
                                        android:background="@drawable/button"
                                        android:layout_toRightOf="@+id/bangding_qq_li"/>
                                </RelativeLayout>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:id="@+id/bangding_email_li">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="邮箱："
                                            android:textColor="@color/ShopTextColor"
                                            android:textSize="22dp"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="123456789@qq.com"
                                            android:textSize="20dp"
                                            android:id="@+id/showEmail"
                                            android:textColor="@color/ShopTextColor"/>
                                    </LinearLayout>
                                    <Button
                                        android:layout_width="60dp"
                                        android:layout_height="30dp"
                                        android:layout_marginLeft="10dp"
                                        android:background="@drawable/button"
                                        android:layout_toRightOf="@id/bangding_email_li"
                                        android:text="去绑定"
                                        android:id="@+id/btnUpdateEmail"
                                        android:textColor="@color/buttonColor"
                                        android:autoSizeMaxTextSize="16dp"
                                        android:maxLines="1"
                                        android:autoSizeTextType="uniform"/>
                                </RelativeLayout>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/change_password_li"
                                        android:layout_centerVertical="true">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="修改密码："
                                            android:textSize="22dp"
                                            android:textColor="@color/ShopTextColor"/>
                                    </LinearLayout>
                                    <Button
                                        android:layout_width="60dp"
                                        android:layout_height="30dp"
                                        android:layout_marginLeft="10dp"
                                        android:text="修改"
                                        android:textSize="16dp"
                                        android:id="@+id/change_password"
                                        android:layout_toRightOf="@id/change_password_li"
                                        android:background="@drawable/button"
                                        android:textColor="@color/buttonColor"/>
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:id="@+id/system_setting_li"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <Button
                            android:layout_width="120dp"
                            android:layout_height="50dp"
                            android:text="切换账号"
                            android:textSize="16dp"
                            android:id="@+id/btn_logout"
                            android:textColor="@color/buttonColor"
                            android:background="@drawable/button"/>
                        <Button
                            android:layout_width="120dp"
                            android:layout_height="50dp"
                            android:text="检查更新"
                            android:textSize="16dp"
                            android:id="@+id/check_update"
                            android:textColor="@color/buttonColor"
                            android:background="@drawable/button"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:id="@+id/system_about_li"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/ShopTextColor"
                        android:textSize="18dp"
                        android:autoSizeMaxTextSize="35dp"
                        android:maxLines="1"
                        android:autoSizeTextType="uniform"
                        android:text="本产品由知识农场项目组所有，侵权必究"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textSize="18dp"
                        android:textColor="@color/ShopTextColor"
                        android:autoSizeMaxTextSize="35dp"
                        android:autoSizeTextType="uniform"
                        android:text="团队成员信息如下(排名不分先后)"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:textSize="18dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/ShopTextColor"
                        android:autoSizeMaxTextSize="35dp"
                        android:autoSizeTextType="uniform"
                        android:text="前端界面开发：\n\u3000李和谦(河北师范大学软件学院)，\n\u3000孙建旺(河北师范大学软件学院)"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:textSize="18dp"
                        android:textColor="@color/ShopTextColor"
                        android:autoSizeMaxTextSize="35dp"
                        android:autoSizeTextType="uniform"
                        android:text="后端服务开发：\n\u3000张帅华(河北师范大学软件学院)，\n\u3000景光赞(河北师范大学软件学院)"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:textSize="18dp"
                        android:textColor="@color/ShopTextColor"
                        android:autoSizeMaxTextSize="35dp"
                        android:autoSizeTextType="uniform"
                        android:text="界面设计及美术开发：\n\u3000乔开元(河北师范大学美术与设计学院)，\n\u3000杨云婷(河北师范大学美术与设计学院)"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"/>
</LinearLayout>