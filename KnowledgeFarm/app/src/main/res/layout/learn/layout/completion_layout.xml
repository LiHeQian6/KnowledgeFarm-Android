<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:id="@+id/question_re">
        <TextView
            android:id="@+id/completion_Question"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="50dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="5 + 8 - 3 = " />
        <EditText
            android:id="@+id/completion_Answer"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:textSize="50dp"
            android:inputType="number"
            android:imeOptions="flagNoExtractUi"
            android:layout_toRightOf="@+id/completion_Question"
            android:theme="@style/MyEditText"
            android:textColor="#ffffff" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/isTrue"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/question_re"
        android:src="@drawable/duigou"
        android:visibility="gone">
    </ImageView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/question_re">

        <TextView
            android:id="@+id/isFalse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你还差一点就答对了哦！"
            android:textColor="@color/ShopTextColor"
            android:visibility="invisible"
            android:textSize="20sp">
        </TextView>
    </RelativeLayout>
</RelativeLayout>