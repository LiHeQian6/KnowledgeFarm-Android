<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/touch"
    android:background="@drawable/main_background"
    android:padding="5dp"
    tools:context=".Main.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5">
        </TextView>

        <GridLayout
            android:layout_width="wrap_content"
            android:id="@+id/lands"
            android:rowCount="3"
            android:columnCount="6"
            android:rotationX="20"
            android:layout_marginTop="100dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
        </GridLayout>

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <ImageView android:layout_width="200dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/dog"
        android:id="@+id/dog"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_height="200dp"/>
    <RelativeLayout android:layout_width="match_parent"
                  android:gravity="center_vertical"
                  android:layout_height="wrap_content">
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_alignParentLeft="true"
                      android:id="@+id/userInfo"
                      android:gravity="center_vertical"
                      android:layout_height="wrap_content">
            <ImageView android:layout_width="50dp"
                       android:id="@+id/photo"
                       android:src="@drawable/photo"
                       android:layout_height="50dp"/>
            <LinearLayout android:layout_width="wrap_content"
                          android:orientation="vertical"
                          android:padding="5dp"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="昵称:景宝宝"
                          android:id="@+id/nickName"
                          android:textSize="20sp"
                    android:textColor="@color/ShopTextColor"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:text="lv:16"
                          android:id="@+id/level"
                          android:textColor="@color/ShopTextColor"
                          android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ProgressBar
                        android:layout_width="100dp"
                        android:progress="50"
                        android:id="@+id/experience"
                        android:layout_centerInParent="true"
                        android:progressDrawable="@drawable/progressbar_bg"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_height="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="20/500"
                        android:textSize="10sp"
                        android:id="@+id/experienceValue"
                        android:textColor="@android:color/white"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <TextView android:layout_width="wrap_content"
                          android:text="账号：26415161"
                          android:textSize="12sp"
                          android:id="@+id/account"
                    android:textColor="@color/ShopTextColor"
                          android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
        <TextView android:layout_width="wrap_content"
                  android:text="金币：6666"
                  android:layout_margin="5dp"
            android:textColor="@color/ShopTextColor"
                  android:layout_toRightOf="@+id/userInfo"
                  android:id="@+id/money"
            android:textSize="20sp"
                  android:layout_height="wrap_content"/>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_alignParentRight="true"
                      android:layout_height="wrap_content">
            <LinearLayout android:layout_width="wrap_content"
                          android:orientation="vertical"
                          android:gravity="center"
                          android:layout_marginRight="20dp"
                          android:layout_height="wrap_content">
                <ImageView android:layout_width="50dp"
                           android:src="@drawable/shop"
                           android:id="@+id/shop"
                           android:layout_height="50dp"/>
                <TextView android:layout_width="wrap_content"
                          android:text="商店"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content"
                         android:orientation="vertical"
                         android:gravity="center"
                         android:layout_marginRight="20dp"
                         android:layout_height="wrap_content">
                <ImageView android:layout_width="50dp"
                           android:src="@drawable/pet"
                           android:id="@+id/pet"
                           android:layout_height="50dp"/>
                <TextView android:layout_width="wrap_content"
                          android:text="宠物"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content"
                         android:orientation="vertical"
                         android:gravity="center"
                         android:layout_marginRight="20dp"
                         android:layout_height="wrap_content">
                <ImageView android:layout_width="50dp"
                           android:src="@drawable/setting"
                           android:id="@+id/setting"
                           android:layout_height="50dp"/>
                <TextView android:layout_width="wrap_content"
                          android:text="设置"
                          android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>



    <LinearLayout android:layout_width="match_parent"
                  android:gravity="center_vertical"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content">
        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:layout_marginRight="20dp"
                      android:layout_height="wrap_content">
            <ImageView android:layout_width="100dp"
                       android:src="@drawable/learn"
                       android:id="@+id/learn"
                       android:layout_height="80dp"/>
            <TextView android:layout_width="wrap_content"
                      android:text="学习中心"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:layout_marginRight="20dp"
                      android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp">
                <ImageView android:layout_width="50dp"
                    android:src="@drawable/shuihu"
                    android:id="@+id/water"
                    android:layout_centerInParent="true"
                    android:layout_height="50dp"/>
                <ImageView
                    android:layout_width="60dp"
                    android:src="@drawable/xuanzhong"
                    android:visibility="gone"
                    android:id="@+id/xzw"
                    android:layout_height="60dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="16"
                    android:textColor="#000"
                    android:id="@+id/waterCount"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <TextView android:layout_width="wrap_content"
                      android:text="水"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:layout_marginRight="20dp"
                      android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp">
                <ImageView android:layout_width="50dp"
                    android:src="@drawable/huafei"
                    android:id="@+id/fertilizer"
                    android:layout_centerInParent="true"
                    android:layout_height="50dp"/>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/xuanzhong"
                    android:visibility="gone"
                    android:id="@+id/xzf"
                    android:layout_height="60dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="16"
                    android:textColor="#000"
                    android:id="@+id/fertilizerCount"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <TextView android:layout_width="wrap_content"
                      android:text="肥料"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:layout_marginRight="20dp"
                      android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp">
                <ImageView android:layout_width="50dp"
                    android:src="@drawable/shouhuo"
                    android:id="@+id/harvest"
                    android:layout_centerInParent="true"
                    android:layout_height="50dp"/>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/xzs"
                    android:src="@drawable/xuanzhong"
                    android:layout_height="60dp"/>
            </RelativeLayout>
            <TextView android:layout_width="wrap_content"
                      android:text="收获"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:layout_marginRight="20dp"
                      android:layout_height="wrap_content">
            <ImageView android:layout_width="60dp"
                       android:src="@drawable/beibao"
                       android:id="@+id/bag"
                       android:padding="5dp"
                       android:layout_height="60dp"/>
            <TextView android:layout_width="wrap_content"
                      android:text="背包"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="50dp"
        android:id="@+id/jiaoshui"
        android:layout_height="50dp"/>

</RelativeLayout>