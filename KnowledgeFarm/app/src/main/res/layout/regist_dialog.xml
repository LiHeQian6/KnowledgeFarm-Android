<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="20dp"

    android:background="@drawable/loadin">



        <EditText
            android:id="@+id/registName"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/eradius"
            android:gravity="center_horizontal"
            android:hint="昵称"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/registPwd2"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/eradius"
            android:gravity="center_horizontal"
            android:hint="密码"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/configPwd2"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/eradius"
            android:gravity="center_horizontal"
            android:hint="确认密码"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/boundToQQ"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/eradius"
            android:gravity="center_horizontal"
            android:hint="绑定QQ邮箱"
            android:textSize="20sp" />
        <Spinner
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:id="@+id/spiner"
            android:entries="@array/sarry"
            android:textAlignment="center"
            android:background="@drawable/grade"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btnRegist2"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="注册"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="15dp"
            android:background="@drawable/radius" />


</LinearLayout>