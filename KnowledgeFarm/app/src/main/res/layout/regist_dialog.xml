<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/logindialogbac">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <Spinner
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:id="@+id/spiner"
            android:entries="@array/sarry"
            android:textAlignment="center"
            android:background="@drawable/grade"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/registPwd"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/eradius"
            android:gravity="center_horizontal"
            android:imeOptions="flagNoExtractUi"
            android:hint="密码"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/configPwd"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/eradius"
            android:gravity="center_horizontal"
            android:hint="确认密码"
            android:imeOptions="flagNoExtractUi"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/boundQQ"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/eradius"
            android:gravity="center_horizontal"
            android:hint="绑定QQ邮箱"
            android:imeOptions="flagNoExtractUi"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btnRegist"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="注册"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20sp"
            android:background="@drawable/shape_login" />

    </LinearLayout>


</ScrollView>