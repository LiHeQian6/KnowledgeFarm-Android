<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.li.knowledgefarm">

    <application
        android:allowBackup="true"
        android:fitsSystemWindows="true"
        android:largeHeap="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:isGame="true"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="landscape"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".Login.RegisteActivity" android:screenOrientation="landscape"></activity>
        <activity android:name=".Study.Subject.ChineseActivity" android:screenOrientation="landscape"/>
        <activity android:name=".MyFriends.MyFriendActivity" android:screenOrientation="landscape"/>
        <activity
            android:name=".Study.Subject.EnglishActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Settings.UpdatePasswordActivity"
            android:configChanges="screenSize|orientation"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Settings.BindingEmailActivity"
            android:configChanges="screenSize|orientation"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Login.QQFirstActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Login.FindPassword"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Login.StartActivity"
            android:fitsSystemWindows="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Shop.ShopActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Main.MainActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Login.LoginByAccountActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Login.LoginActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tencent.tauth.AuthActivity"
            android:launchMode="singleTask"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="tencent1110065654" /> <!-- 开放平台获取的APPID  101827462  1110127580-->
            </intent-filter>
        </activity>
        <activity
            android:name="com.tencent.connect.common.AssistActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".Study.Subject.MathActivity"
            android:screenOrientation="landscape"
            android:theme="@style/customApp" />
        <activity
            android:name=".Study.SubjectListActivity"
            android:screenOrientation="landscape"
            android:theme="@style/customApp" />
        <activity
            android:name=".Settings.SettingActivity"
            android:configChanges="screenSize|orientation"
            android:screenOrientation="landscape">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission
        android:name="android.permission.WRITE_APN_SETTINGS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

</manifest>